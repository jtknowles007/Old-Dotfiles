        strip_workspace_numbers yes
        workspace_min_width 30
        colors {
                background $bg
                statusline $fg
                separator $c1
                focused_workspace $c3 $c3 $bg
                active_workspace $c6 $c6 $bg
                inactive_workspace $c6 $bg $c6
                urgent_workspace $c1 $c1 $bg
        }
}

