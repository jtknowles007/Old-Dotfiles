!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! XFT                       !
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!

xft.dpi: 96
xft.antialias: 1
xft.rgba: rgb
xft.hinting: 1
xft.autohint: 0
xft.hintstyle: hintful

!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! URxvt                     !
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!

! General
URxvt.loginShell: true
URxvt.scrollBar: false
URxvt.saveLines: 12000
URxvt.internalBorder: 25
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.scrollBar_right: false
URxvt.urgentOnBell: true
URxvt.depth: 24
URxvt.iso14755: false
URxvt.buffered: true
URxvt.lineSpace: 1
URxvt.letterSpace: -1
URxvt.geometry: 100x50

! Transparency
URxvt*.transparent: false
URxvt*.shading: 20


! Fonts & Spacing
URxvt.font: xft:SauceCodePro Nerd Font Mono:style=Regular:pixelsize=14,xft:DejaVu Sans Mono for Powerline:style=Book:pixelsize=14
URxvt.boldFont: xft:SauceCodePro Nerd Font Mono:style=Bold:pixelsize=14,xft:DejaVu Sans Mono for Powerline:style=Bold:pixelsize=14

! Perl
URxvt*.perl-lib: ~/.urxvt/ext
URxvt*.perl-ext-common: default,font-size,url-select

!--Perl Font-Size
URxvt.keysym.C-Up: font-size:increase
URxvt.keysym.C-Down: font-size:decrease
URxvt.keysym.C-S-Up: font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal
URxvt.keysym.C-equal: font-size:reset
URxvt.keysym.C-slash: font-size:show

!--Perl Url-Select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: google-chrome
URxvt.url-select.underline: true

!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! Rofi                      !
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!

rofi.width: 25
rofi.hide-scrollbar: true
rofi.location: 0
rofi.lines: 10
rofi.sidebar-mode:true
rofi.separator-style: solid
rofi.bw: 3
rofi.font: SauceCodePro Nerd Font Mono 12
rofi.show-icons:true
rofi.drun-icon-theme:Papirus
