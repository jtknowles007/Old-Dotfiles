# Aliases
alias cls='clear'
alias x='exit'
alias grep='grep --color'

alias install='sudo apt install'
alias remove='sudo apt remove'
alias update='sudo apt update'
alias upgrade='sudo apt udate && sudo apt upgrade'
alias shutdown='sudo shutdown -h now'
alias open='xdg-open'
alias svim='sudo vim'
alias h='history'
alias h10='history -10' # Last 10 commands in history
alias hg='history | grep' # Grep history for included text
alias help='man'
alias rm='rm'
alias l='ls'
alias lh='ls -Alh'
alias ll='ls -al'
alias python='python3'
alias ranger='ranger --choosedir=$HOME/.rangerdir; LASTDIR=`cat $HOME/.rangerdir`; cd "$LASTDIR"'

# Navigation
alias cdhome="cd ~"
alias cddot="cd ~/Dotfiles"
alias cdproj="cd ~/Projects"

# Source Reload
alias sx="xrdb ~/.Xresources"
alias sz="source ~/.zshrc"


# Suffix Aliases
#

# Functions
# Run ls -al automatically when changing directories
chpwd(){
	ll
}
